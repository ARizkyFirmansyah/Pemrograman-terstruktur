#include <iostream>
#include <vector>
#include <string>

//Dikerjakan oleh Elena Oktaviani
using namespace std;
bool searchWord(vector<vector<char>>& matrix, string& word, int baris, int kolom, int arahBaris, int arahKolom) {
    int jumlahBaris = matrix.size();
    int jumlahKolom = matrix[0].size();
    int panjang = word.length();

    for (int i = 0; i < panjang; i++) {
        int barisbaru = baris + i * arahBaris;
        int kolombaru = kolom + i * arahKolom;

if (barisbaru < 0 || barisbaru >= jumlahBaris || kolombaru < 0 || kolombaru >= jumlahKolom || 
            tolower(matrix[barisbaru][kolombaru]) != tolower(word[i])) {
            return false;
        }
    }
return true;
}

//Dikerjakan oleh Rizky Firmansyah
bool findWord(vector<vector<char>>& matrix, string& word) {
    int jumlahBaris = matrix.size();
    int jumlahKolom = matrix[0].size();

for (int baris = 0; baris < jumlahBaris; baris++) {
        for (int kolom = 0; kolom < jumlahKolom; kolom++) {
            if (searchWord(matrix, word, baris, kolom, 0, 1)   ||
                searchWord(matrix, word, baris, kolom, 0, -1)  ||
                searchWord(matrix, word, baris, kolom, 1, 0)   || 
                searchWord(matrix, word, baris, kolom, -1, 0)  ||
                searchWord(matrix, word, baris, kolom, 1, 1)   || 
                searchWord(matrix, word, baris, kolom, -1, -1) ||
                searchWord(matrix, word, baris, kolom, -1, 1)  || 
                searchWord(matrix, word, baris, kolom, 1, -1)) 
            {
                return true;
            }
        }
    }


    return false;
}

}
